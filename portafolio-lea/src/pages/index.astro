---
import AboutMe from '../components/AboutMe.astro';
import Projects from '../components/Projects.astro';
import Footer from '../components/Footer.astro';
import Navbar from '../components/Navbar.astro';
import Technologies from '../components/Technologies.astro';
import '../styles/global.css';
---

<html class="scroll-smooth">
  <head>
    <meta charset="UTF-8">
    <title>Mi Portafolio</title>
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <!-- Incluye el CDN de Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  </head>
  <body >
    <div class="fixed top-0 left-0 w-full min-h-full z-[-2] bg-neutral-950 bg-[radial-gradient(ellipse_100%_100%_at_70%_-10%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>

    <Navbar />
    <main class="max-w-4xl mx-auto p-4">
      <Projects/>
      <Technologies/>
      <AboutMe/>
    </main>
    <Footer />
        <!-- Botón para volver arriba -->
    <button id="scrollTopBtn" class="hidden fixed bottom-8 right-8 bg-gradient-to-r from-violet-900 to-fuchsia-800 text-white p-3 rounded-full shadow-lg hover:bg-blue-600 transition duration-300">
      ↑
    </button>
    <script>
      const scrollTopBtn = document.getElementById('scrollTopBtn');
      window.onscroll = function () {
        if (document.body.scrollTop > 200 || document.documentElement.scrollTop > 200) {
          scrollTopBtn.classList.remove('hidden');
        } else {
          scrollTopBtn.classList.add('hidden');
        }
      };
      scrollTopBtn.addEventListener('click', function () {
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });
    </script>
  </body>
</html>