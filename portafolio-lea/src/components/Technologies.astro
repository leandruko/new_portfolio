const technologies = [
  {
    name: "JavaScript",
    image: "/images/javascript.svg",
  },
  {
    name: "Python",
    image: "/images/python.svg",
  },
  {
    name: "Django",
    image: "/images/django.svg",
  },
  {
    name: "Angular",
    image: "",
  },
  {
    name: "R",
    image: "/images/R.svg",
  },
  {
    name: "SQL server",
    image: "/images/sql-server.svg",
  },
  {
    name: "MySQL",
    image: "/images/mysql.svg",
  },
  {
