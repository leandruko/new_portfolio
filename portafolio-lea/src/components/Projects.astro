---
// Aquí puedes agregar tus proyectos
const projects = [
  {
    title: "Proyecto 1",
    description: "Descripción del proyecto 1.",
    link: "https://enlace-a-tu-proyecto1.com"
  },
  {
    title: "Proyecto 2",
    description: "Descripción del proyecto 2.",
    link: "https://enlace-a-tu-proyecto2.com"
  }
];
---

<section id="projects" class="my-16 p-8 bg-gray-100 rounded-lg shadow-lg">
    <h2 class="text-3xl font-bold text-center">Proyectos Realizados</h2>
    <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-8">
      {projects.map(project => (
        <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300">
          <h3 class="text-xl font-bold mb-2">{project.title}</h3>
          <p class="mb-4">{project.description}</p>
          <a href={project.link} target="_blank" class="text-blue-600 hover:text-blue-800 transition-colors duration-300 font-semibold">
            Ver Proyecto &rarr;
          </a>
        </div>
      ))}
    </div>
</section>
